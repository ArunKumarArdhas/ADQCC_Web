    function GET_DEPARTMENT_LIST() {
        $("#table1").dataTable().fnDestroy();
        $("#AddDepartment").hide();
        $("#ListView").show();
        $.post("@Url.Action("_GetDepartmentMaster", "Masters")",function (data) {
            $("#GetDepartmentMaster").html('');
            $("#GetDepartmentMaster").html(data);
       });
