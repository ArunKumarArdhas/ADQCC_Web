<script>
    $(document).ready(function () {
        $("#AddEmergType").hide();
        $("#ListView").show();
        GET_EMERG_TYPE_LIST();

        $("#bckEmergType").on('click', function () {
            $("#AddEmergType").hide(100);
            $("#ListView").show(100);
            $('#EMERG_TYPE_MAS_ID').val('0');
            $('#EMERG_TYPE_MAS').val('');
            $('#EMERG_TYPE_MAS_AR').val('');
        });
        $("#addnewEmergType").on('click', function () {
            $("#AddEmergType").show(100);
            $("#ListView").hide(100);
            // $('#EMERG_TYPE_MAS_ID').val('0');
            // $('#EMERG_TYPE_MAS').val('');
            // $('#EMERG_TYPE_MAS_AR').val('');
        });
        $("#btn_EmrType").on('click', function () {
            ;

            var varEMERG_TYPE_MAS_ID = $("#EMERG_TYPE_MAS_ID").val();
            var varEMERG_TYPE_MAS = $("#EMERG_TYPE_MAS").val();
            var varEMERG_TYPE_MAS_AR = $("#EMERG_TYPE_MAS_AR").val();
            var varCREATED_BY = '1';//'Model.EMP_ID';

            if (varEMERG_TYPE_MAS == "") {
                toastr.error("@ADQCC_New.LocalResource.Resource.EMRSelecttheEmergencytype", "@ADQCC_New.LocalResource.Resource.Error");
                $("#EMERG_TYPE_MAS").focus();
                return false;
            }

            if (varEMERG_TYPE_MAS_AR == "") {
                toastr.error("@ADQCC_New.LocalResource.Resource.EMRSelecttheEmergencytypeAR", "@ADQCC_New.LocalResource.Resource.Error");
                $("#EMERG_TYPE_MAS_AR").focus();
                return false;
            }

            var model = {
                EMERG_TYPE_MAS_ID: varEMERG_TYPE_MAS_ID,
                EMERG_TYPE_MAS: varEMERG_TYPE_MAS,
                EMERG_TYPE_MAS_AR: varEMERG_TYPE_MAS_AR,
                CREATED_BY: varCREATED_BY
            }
            $.ajax({
                url: '@Html.Raw(@Url.Action("AddEmergencyTypeMaster", "Masters"))',
                type: "POST",
                cache: false,
                data: JSON.stringify(model),
                contentType: "application/json; charset=utf-8",
                dataType: "json",

                success: function (data) {
                    if (data.STATUS_CODE == "200") {
                        toastr.success(data.MESSAGE, "@ADQCC_New.LocalResource.Resource.Success");
                        GET_EMERG_TYPE_LIST();
                    }
                    else {
                        toastr.error(data.MESSAGE, "@ADQCC_New.LocalResource.Resource.Error");
                    }
                },
            });
        });
    });


    function GET_EMERG_TYPE_LIST() {
        ;
        $("#table1").dataTable().fnDestroy();
        $("#AddEmergType").hide();
        $("#ListView").show();
        $.post("@Url.Action("GetEmergencyTypeMaster", "Masters")", function (data) {
            $("#GetEmergTypeMaster").html('');
            $("#GetEmergTypeMaster").html(data);
        });
    }

    function EMRTYPE_VIEWEDITDELETE(EMERG_TYPE_MAS_ID, viewedit) {
        ;
        if (viewedit == 'view') {
            $.post("@Url.Action("EditEmergencyTypeMaster", "Masters")", { EMERG_TYPE_MAS_ID: EMERG_TYPE_MAS_ID }, function (data) {
                if (data.STATUS_CODE == "200") {
                    $("#AddEmergType").show(100);
                    $("#ListView").hide(100);
                    $(".btnaddclear").hide(100);

                    $("#EMERG_TYPE_MAS_ID").val(data.EMERG_TYPE_MAS_ID)
                    $("#EMERG_TYPE_MAS").val(data.EMERG_TYPE_MAS).prop("disabled", true);
                    $("#EMERG_TYPE_MAS_AR").val(data.EMERG_TYPE_MAS_AR).prop("disabled", true);
                }
                else {
                    toastr.error(data.MESSAGE, "@ADQCC_New.LocalResource.Resource.Error");
                }
            });

        } else if (viewedit == 'edit') {
            $.post("@Url.Action("EditEmergencyTypeMaster", "Masters")", { EMERG_TYPE_MAS_ID: EMERG_TYPE_MAS_ID }, function (data) {
                if (data.STATUS_CODE == "200") {
                    $("#AddEmergType").show(100);
                    $("#ListView").hide(100);
                    $(".btnaddclear").show(100);
                    $("#EMERG_TYPE_MAS_ID").val(data.EMERG_TYPE_MAS_ID).removeAttr("disabled");
                    $("#EMERG_TYPE_MAS").val(data.EMERG_TYPE_MAS).removeAttr("disabled");
                    $("#EMERG_TYPE_MAS_AR").val(data.EMERG_TYPE_MAS_AR).removeAttr("disabled");
                }
                else {
                    toastr.error(data.MESSAGE, "@ADQCC_New.LocalResource.Resource.Error");
                }
            });

        } else {
            var DELETE = confirm("@ADQCC_New.LocalResource.Resource.conformdelete");
            if (DELETE == true) {
                $.post("@Url.Action("DeleteEmergencyTypeMaster", "Masters")", { EMERG_TYPE_MAS_ID: EMERG_TYPE_MAS_ID }, function (data) {
                    if (data.STATUS_CODE == "200") {
                        toastr.success(data.MESSAGE, "@ADQCC_New.LocalResource.Resource.Success");
                        GET_EMERG_TYPE_LIST();
                    }
                    else {
                        toastr.error(data.MESSAGE, "@ADQCC_New.LocalResource.Resource.Error");
                    }
                });
            } else {
                return false;
            }
        }


    }
    function FunctionHelp() {
        ;
        window.open('@Url.Action("EmergencyHelpDoc", "Masters")');
    }

