@model IReadOnlyCollection<ADQCC_New.Models.RiskManagement.RiskManagementModel.GET_RM_HAZARD_MASTER>;
@{
    ViewData["Title"] = "HazardMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

